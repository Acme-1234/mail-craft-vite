{
  "id": "password-reset",
  "name": "Password Reset",
  "description": "Secure and user-friendly password reset notification with clear instructions",
  "category": "transactional",
  "thumbnail": "/templates/thumbnails/password-reset.png",
  "blocks": [
    {
      "id": "header",
      "type": "container",
      "config": {
        "backgroundColor": "#ffffff",
        "padding": "30px 20px 20px 20px",
        "textAlign": "center"
      },
      "children": [
        {
          "id": "logo",
          "type": "image",
          "config": {
            "src": "{{company_logo}}",
            "alt": "{{company_name}}",
            "width": "120px",
            "height": "auto",
            "alignment": "center"
          }
        }
      ]
    },
    {
      "id": "main-content",
      "type": "container",
      "config": {
        "backgroundColor": "#ffffff",
        "padding": "20px",
        "maxWidth": "500px",
        "margin": "0 auto"
      },
      "children": [
        {
          "id": "security-icon",
          "type": "text",
          "config": {
            "content": "<div style=\"text-align: center; margin: 20px 0;\"><div style=\"display: inline-block; width: 60px; height: 60px; background-color: #fed7d7; border-radius: 50%; position: relative;\"><span style=\"position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 24px;\">üîí</span></div></div>",
            "textAlign": "center"
          }
        },        {
          "id": "main-heading",
          "type": "heading",
          "content": "Password Reset Request",
          "level": 1,
          "styles": {
            "color": "#2d3748",
            "fontSize": "24px",
            "fontWeight": "600",
            "textAlign": "center",
            "padding": "0 0 20px 0"
          }
        },
        {
          "id": "greeting",
          "type": "text",
          "config": {
            "content": "<p style=\"font-size: 16px; color: #4a5568; line-height: 1.5; margin-bottom: 20px;\">Hi {{user_name}},</p>",
            "fontSize": "16px",
            "color": "#4a5568"
          }
        },
        {
          "id": "reset-message",
          "type": "text",
          "config": {
            "content": "<p style=\"font-size: 16px; color: #4a5568; line-height: 1.6; margin-bottom: 25px;\">We received a request to reset your password for your {{company_name}} account. If you made this request, click the button below to set a new password:</p>",
            "fontSize": "16px",
            "color": "#4a5568",
            "lineHeight": "1.6"
          }
        },
        {
          "id": "reset-button",
          "type": "button",
          "config": {
            "text": "Reset Password",
            "url": "{{reset_url}}",
            "backgroundColor": "#e53e3e",
            "textColor": "#ffffff",
            "borderRadius": "6px",
            "padding": "14px 28px",
            "fontSize": "16px",
            "fontWeight": "600",
            "alignment": "center",
            "marginTop": "10px",
            "marginBottom": "25px"
          }
        },
        {
          "id": "expiry-notice",
          "type": "text",
          "config": {
            "content": "<div style=\"background-color: #fef5e7; border-left: 4px solid #f6ad55; padding: 15px; margin: 25px 0; border-radius: 4px;\"><p style=\"font-size: 14px; color: #744210; margin: 0; font-weight: 500;\">‚ö†Ô∏è This password reset link will expire in {{expiry_hours}} hours for security reasons.</p></div>",
            "fontSize": "14px"
          }
        },
        {
          "id": "security-notice",
          "type": "text",
          "config": {
            "content": "<p style=\"font-size: 14px; color: #718096; line-height: 1.5; margin-bottom: 20px;\">If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.</p>",
            "fontSize": "14px",
            "color": "#718096",
            "lineHeight": "1.5"
          }
        },
        {
          "id": "alternative-text",
          "type": "text",
          "config": {
            "content": "<p style=\"font-size: 14px; color: #718096; line-height: 1.5; margin-bottom: 15px;\">If the button above doesn't work, copy and paste this link into your browser:</p><p style=\"font-size: 12px; color: #3182ce; word-break: break-all; background-color: #f7fafc; padding: 10px; border-radius: 4px; font-family: monospace;\">{{reset_url}}</p>",
            "fontSize": "14px",
            "color": "#718096"
          }
        }
      ]
    },
    {
      "id": "footer",
      "type": "container",
      "config": {
        "backgroundColor": "#f7fafc",
        "padding": "25px 20px",
        "textAlign": "center",
        "borderTop": "1px solid #e2e8f0"
      },
      "children": [
        {
          "id": "footer-text",
          "type": "text",
          "config": {
            "content": "<p style=\"color: #718096; font-size: 12px; margin: 0 0 5px 0;\">{{company_name}} Security Team</p><p style=\"color: #a0aec0; font-size: 11px; margin: 0;\">{{company_address}}</p><p style=\"color: #a0aec0; font-size: 11px; margin: 10px 0 0 0;\">This is an automated security notification. Please do not reply to this email.</p>",
            "fontSize": "12px",
            "color": "#718096",
            "textAlign": "center"
          }
        }
      ]
    }
  ],
  "variables": {
    "company_name": "Your Company",
    "company_logo": "https://via.placeholder.com/120x48/ffffff/2d3748?text=LOGO",
    "company_address": "123 Security Blvd, Safe City, SC 12345",
    "user_name": "John Doe",
    "reset_url": "https://yourcompany.com/reset-password?token=abc123",
    "expiry_hours": "24"
  },
  "metadata": {
    "version": "1.0",
    "createdAt": "2024-01-15T10:15:00Z",
    "tags": ["password", "reset", "security", "transactional"],
    "estimatedWidth": "500px",
    "previewText": "Password reset request for your account - expires in 24 hours"
  }
}
